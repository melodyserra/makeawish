<% include ../partials/header %>

<div class="postcontainer">
<form class="form-horizontal" role="form" action = "/" method = "POST">
  
  <div class="form-group">
    <label for="inputimage" class="col-sm-2 control-label">Image</label>
    <div class="col-sm-10">
    <input required type="hidden" name="wish[image]" id="image" role="uploadcare-uploader" />
    <input type="hidden" name="wish[image_width]" id="imageWidthInput" />
    <input type="hidden" name="wish[image_height]" id="imageHeightInput" />
    </div>
  </div>
  <div class="form-group">
    <label for="inputsummary" class="col-sm-2 control-label">Summary</label>
    <div class="col-sm-10">
      <textarea class="form-control" name="wish[summary]" maxlength="200" id="summary" cols="30" rows="5"></textarea>
    </div>
  </div>
  <div class="form-group">
    <label for="inputname" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="wish[name]" id="name">
    </div>
  </div>
  <div class="form-group">
    <label for="inputage" class="col-sm-2 control-label">Age</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="wish[age]" id="age">
    </div>
  </div>
  <div class="form-group">
    <label for="inputillness" class="col-sm-2 control-label">Illness</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="wish[illness]" id="illness">
    </div>
  </div>
  <div class="form-group">
    <label for="inputwish" class="col-sm-2 control-label">Wish</label>
    <div class="col-sm-10">
      <textarea class="form-control" name="wish[wish]" id="wish" cols="30" rows="10"></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>
</div>

<script src="/javascripts/dimensions_setter.js"></script>

<% include ../partials/footer %>